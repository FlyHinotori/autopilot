<Page x:Class="Autopilot.GUI.Neu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Neu">

    <Grid>
        <TabControl x:Name="TabsNeuerAuftrag" Margin="5,0,5,61" >
            <TabItem x:Name="TabKunde" Header="Kunde" Visibility="Hidden">
                <Grid>
                    <TextBox x:Name="TBKundenName" HorizontalAlignment="Left" Height="23" Margin="93,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Name, Mode=TwoWay}"/>
                    <TextBox x:Name="TBAdresse" HorizontalAlignment="Left" Height="23" Margin="93,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Adresse, Mode=TwoWay}"/>
                    <Label Content="Name:" HorizontalAlignment="Left" Margin="22,32,0,0" VerticalAlignment="Top"/>
                    <Label Content="Adresse:" HorizontalAlignment="Left" Margin="22,63,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabRoute" Header="Route" Visibility="Hidden">
                <Grid/>
            </TabItem>
            <TabItem x:Name="TabZeit" Header="Zeit" Visibility="Hidden">
                <Grid/>
            </TabItem>
        </TabControl>
        <Button x:Name="btnWeiter" Content="Weiter" HorizontalAlignment="Right" Margin="215,0,5,10" VerticalAlignment="Bottom" Width="75" Height="46" Click="Button_Click"/>
        <Button x:Name="btnZurueck" Content="Zurück" HorizontalAlignment="Right" Margin="135,0,90,10" VerticalAlignment="Bottom" Width="75" Height="46"/>

    </Grid>
</Page>
