<Page x:Class="Autopilot.GUI.Neu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="369" d:DesignWidth="302"
	Title="Neu">

    <Grid>
        <TabControl x:Name="TabsNeuerAuftrag" Margin="5,0,5,61" >
            <TabItem x:Name="TabKunde" Header="Kunde" Visibility="Hidden">
                <Grid>
                    <TextBox x:Name="TBName" HorizontalAlignment="Left" Height="23" Margin="93,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Name, Mode=TwoWay}"/>
                    <Label Content="Name:" HorizontalAlignment="Left" Margin="22,32,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBVorname" HorizontalAlignment="Left" Height="23" Margin="93,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Vorname, Mode=TwoWay}"/>
                    <Label Content="Vorname:" HorizontalAlignment="Left" Margin="22,60,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBStrasse" HorizontalAlignment="Left" Height="23" Margin="93,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Strasse, Mode=TwoWay}"/>
                    <Label Content="Straße:" HorizontalAlignment="Left" Margin="22,88,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBPLZ" HorizontalAlignment="Left" Height="23" Margin="93,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Postleitzahl, Mode=TwoWay}"/>
                    <Label Content="PLZ:" HorizontalAlignment="Left" Margin="22,116,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBOrt" HorizontalAlignment="Left" Height="23" Margin="93,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Ort, Mode=TwoWay}"/>
                    <Label Content="Ort:" HorizontalAlignment="Left" Margin="22,144,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBLand" HorizontalAlignment="Left" Height="23" Margin="93,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Land, Mode=TwoWay}"/>
                    <Label Content="Land:" HorizontalAlignment="Left" Margin="22,172,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBEmail" HorizontalAlignment="Left" Height="23" Margin="93,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.EMail, Mode=TwoWay}"/>
                    <Label Content="EMail:" HorizontalAlignment="Left" Margin="22,200,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBTelefon" HorizontalAlignment="Left" Height="23" Margin="93,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Text="{Binding Kunde.Telefon, Mode=TwoWay}"/>
                    <Label Content="Telefon:" HorizontalAlignment="Left" Margin="22,228,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabRoute" Header="Route" Visibility="Hidden">
                <Grid/>
            </TabItem>
            <TabItem x:Name="TabZeit" Header="Zeit" Visibility="Hidden">
                <Grid/>
            </TabItem>
        </TabControl>
        <Button x:Name="btnWeiter" Content="Weiter" HorizontalAlignment="Right" Margin="215,0,5,10" VerticalAlignment="Bottom" Width="75" Height="46" Click="Button_Click"/>
        <Button x:Name="btnZurueck" Content="Zurück" HorizontalAlignment="Right" Margin="135,0,90,10" VerticalAlignment="Bottom" Width="75" Height="46"/>

    </Grid>
</Page>
